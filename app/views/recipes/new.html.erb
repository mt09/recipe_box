<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h2>Add new recipe</h2>
		<%= simple_form_for @recipe do |f| %>
			<div><%= f.input :title %></div>
			<div><%= f.input :description %></div>
			<div><%= f.button :submit, data: {disable_with: "Submitting..."} %></div>
		<% end %>
	</div>
</div>